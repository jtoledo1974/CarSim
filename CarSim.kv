#: import math math

<Axis@Widget2D>:
	Line2D:
		points: (0, 0, 10, 0)
	Line2D:
		points: (0, 0, 0, 10)

<Wheel@Rectangle2D>:
	color: (0, 1, 0, 1)
	t_width: float(self.parent.tire[:3])
	aspect: float(self.parent.tire[4:6])
	wheel: float(self.parent.tire[-2:]) * 25.4
	t_height: (2 * self.t_width * self.aspect / 100 + self.wheel)
	size: (self.t_width / 1000, self.t_height / 1000)

<TurnCircle>:
	id: turn_circle

<BackingLines>
	center: self.parent.turning_circle.coords
	r1: center[0] - self.parent.width
	r2: center[0] + self.parent.width
	Arc2D:
		circle: (*center, r1)
	Arc2D
		circle: (*center, r2)

<Car>:
	coords: (5, 5)

	length: 3.731
	width: 1.922
	wheelbase: 2.315
	track: 1.437
	wheel_to_front: .787
	tire: "175/65R14"
	curb_turning_circle: 10

	Rectangle2D:
		id: body
		color: (1, 1, 0, 1)
		centered: True
		size: (self.parent.width, self.parent.length)
	Wheel:
		id: lfw
		color: (1, 0, 0, 1)
		rotation: self.parent.left_wheel_rotation
		coords: (-self.parent.track/2, self.parent.length/2 - self.parent.wheel_to_front)
	Wheel:
		id: rfw
		color: (1, 0, 0, 1)
		rotation: self.parent.right_wheel_rotation
		coords: (self.parent.track/2, self.parent.length/2 - self.parent.wheel_to_front)
	Wheel:
		id: lbw
		coords: (-self.parent.track/2, self.parent.length/2 - self.parent.wheel_to_front - self.parent.wheelbase)
	Wheel:
		id: lbw
		coords: (self.parent.track/2, self.parent.length/2 - self.parent.wheel_to_front - self.parent.wheelbase)

